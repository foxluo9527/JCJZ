<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/removebgprevwbackground_img"
    tools:context=".SexActivity">

    <ImageView
        android:id="@+id/iv_setting"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginStart="17dp"
        android:layout_marginTop="11dp"
        android:adjustViewBounds="true"
        android:src="@drawable/ic_site"
        app:layout_constraintBottom_toBottomOf="@id/gl_top_car"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/iv_car"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:adjustViewBounds="true"
        android:src="@drawable/big_no2_img"
        app:layout_constraintBottom_toBottomOf="@id/gl_bottom_car"
        app:layout_constraintEnd_toEndOf="@id/gl_center_car"
        app:layout_constraintStart_toStartOf="@id/gl_center_car"
        app:layout_constraintTop_toBottomOf="@id/iv_setting" />

    <View
        android:id="@+id/exit"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="@id/gl_start_navigation"
        app:layout_constraintEnd_toEndOf="@id/gl_end_exit"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/iv_navigation"/>
    <ImageView
        android:id="@+id/iv_navigation"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:src="@drawable/top_navigation"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/gl_start_navigation"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/iv_person"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:src="@drawable/women_character_img"
        app:layout_constraintBottom_toBottomOf="@id/gl_bottom_person"
        app:layout_constraintEnd_toEndOf="@id/gl_center_car"
        app:layout_constraintStart_toStartOf="@id/gl_center_car"
        app:layout_constraintTop_toTopOf="@id/gl_top_person" />

    <View
        android:id="@+id/enter"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/gl_end_enter"
        app:layout_constraintStart_toStartOf="@id/gl_start_enter"
        app:layout_constraintTop_toTopOf="@id/gl_top_enter" />

    <ImageView
        android:id="@+id/iv_man"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:adjustViewBounds="true"
        android:src="@drawable/btn_man"
        app:layout_constraintBottom_toTopOf="@id/gl_bottom_man"
        app:layout_constraintEnd_toEndOf="@id/gl_end_card"
        app:layout_constraintTop_toTopOf="@id/gl_top_man" />

    <ImageView
        android:id="@+id/iv_women"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:adjustViewBounds="true"
        android:src="@drawable/btn_women"
        app:layout_constraintBottom_toTopOf="@id/gl_bottom_women"
        app:layout_constraintEnd_toEndOf="@id/gl_end_women"
        app:layout_constraintTop_toTopOf="@id/gl_top_women" />

    <ScrollView
        android:id="@+id/sv_card"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="22dp"
        android:background="@drawable/bg_start_card"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/gl_end_card"
        app:layout_constraintStart_toStartOf="@id/gl_start_card"
        app:layout_constraintTop_toBottomOf="@id/gl_top_card">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="hi~"
                    android:textColor="@color/white" />

                <TextView
                    android:id="@+id/tv_sex"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="炫酷女孩"
                    android:textColor="#92FF01" />
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="4dp"
                android:text="我是你的专属管家“ 小U~”"
                android:textColor="#01E2FD" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:textColor="@color/white"
                android:layout_marginTop="4dp"
                android:text="@string/start_desc"
                android:textSize="11sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textColor="@color/white"
                android:layout_marginVertical="4dp"
                android:layout_marginStart="10dp"
                android:gravity="center_vertical"
                android:text="@string/start_text" />
        </LinearLayout>
    </ScrollView>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gl_top_women"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.343" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gl_bottom_women"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.444" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gl_end_women"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.876" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gl_top_man"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.205" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gl_bottom_man"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.306" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gl_top_card"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.5" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gl_top_person"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.103" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gl_start_navigation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.556" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gl_top_car"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.177" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gl_bottom_car"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.7" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gl_bottom_person"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.672" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gl_center_car"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.27" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gl_start_card"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.443" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gl_end_card"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.894" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gl_start_enter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.16"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gl_end_enter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.31"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gl_top_enter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.79"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gl_end_exit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.744" />
</androidx.constraintlayout.widget.ConstraintLayout>